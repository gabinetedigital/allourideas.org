-if ['home', 'consultations'].include?(controller.controller_name) || (controller.controller_name == 'questions' && controller.action_name == 'new')
  .row.header
    .span7
      %a{:href => '/'}
        =image_tag('logo.jpg')
    .span5
      %ul.nav.nav-pills.pull-right
        - # We don't want the default active pills for the current page
        - # typically bootstrap expects these to have the active class.
        - # However, we find it draws too much attention to the active class.
        %li{:class => current_page?(root_path) ? 'current' : nil}
          = link_to(t('nav.home'), root_path)
        %li{:class => current_page?(new_consultation_path) ? 'current' : nil}
          = link_to(t('nav.create'), new_consultation_path)
        %li{:class => current_page?(about_path) ? 'current' : nil}
          = link_to(t('nav.about'), about_path)
        %li= link_to(t('nav.blog'), "http://blog.allourideas.org")
