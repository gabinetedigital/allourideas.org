%a.photo_frame{:href => vote_question_prompt_url(@question.id, @prompt.id, :direction => direction),
              :thumb => photo.image.url(:thumb), :choice_url => question_choice_url(@question, choice), :class => "#{direction} vote", :direction => direction, :future_photo => future_photo.image.url(:medium), :id => direction == "left" ? "leftside" : "rightside"}
  %table.current
    %tr
      %td
        =image_tag(photo.image.url(:medium))

  -unless session[:has_voted] == true
    .click_to_vote
      Click to Vote

-if @earl.flag_enabled?
  =link_to_function t('vote.flag_as_inappropriate'), "$('#flag_as_inappropriate').dialog('open'); $('#inappropriate_side').val('#{direction}_flag')", :class => "gray #{direction} flag", :id => "#{direction}_flag"
